@model Bangazon.Models.OrderViewModels.OrderDetailViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        @foreach (var item in Model.LineItems)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Product.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Product.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Product.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Product.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(modelItem => item.Units)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Units)
                <hr>
                @Html.ActionLink("Cancel Order", "Delete", "OrderProducts", new { ProductId = item.Product.ProductId, OrderId = Model.Order.OrderId })
            </dd>
            <hr>
        }
    </dl>
</div>
<div>

@model IEnumerable<Bangazon.Models.ProductTypeViewModels.ProductTypeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Label)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productType in Model)
        {
        <td>
            <div class="list-group-item list-group-item-primary">
                @Html.DisplayFor(modelItem => productType.Label) (@Html.DisplayFor(modelItem => productType.ProductCount))
                <ul class="list-group-item list-group-item-success">
                    @foreach (var product in productType.Products)
                    {
                        <li class="list-group-item list-group-item-danger">

                            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId"> @Html.DisplayFor(modelItem => product.Title)</a>
                            <a asp-controller="Orders" asp-action="Create">Add to Cart</a>
                        </li>


                    }
                </ul>
            </div>
        </td>

    }
        </tbody>

    </table>
